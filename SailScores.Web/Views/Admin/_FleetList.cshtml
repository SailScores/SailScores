@model IEnumerable<SailScores.Core.Model.Fleet>

    <div class="card">
        <div class="card-header" id="fleetsHeading">
            <h5>
                <a id="fleets" class="collapsed" data-toggle="collapse" href="#collapseFleets" aria-expanded="false" aria-controls="collapseFleets">
                    Fleets
                </a>
            </h5>
        </div>
        <div id="collapseFleets" class="collapse" aria-labelledby="fleetsHeading" data-parent="#accordion">
            <div class="card-body">
                <p>
                    Fleets group boats that race against each other. Competitors can belong to
                    multiple fleets.
                </p>
                <p>
                    @Html.ActionLink("Create", "Create", "Fleet", new { /* id=item.PrimaryKey */ })
                </p>
                <table class="table table-not-wide">
                    <tbody>
                        @foreach (var item in Model.OrderBy(f => f.Name))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FleetType)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", "Fleet", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", "Fleet", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>            
    </div>