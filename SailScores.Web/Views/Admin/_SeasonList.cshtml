@model IEnumerable<SailScores.Web.Models.SailScores.SeasonDeleteViewModel>
<div id="seasonsdiv">
<div class="row">
    <div class="col-10 col-sm-8 col-md-5 col-lg-4">
        <h3 class="float-start">
            <a id="seasons">Seasons</a>
            <a class="text-primary"
                data-bs-container="body"
                data-bs-toggle="popover"
                data-bs-placement="top"
                data-bs-trigger="focus hover"
                data-bs-content="Seasons typically repeat each year. Every series must belong to a season. They help with links and statistics.">
                <span class="far fa-question-circle"></span>
            </a>
        </h3>
    </div>
    <div class="col-2 col-sm-4">
        <a class="btn btn-primary"
            asp-action="Create"
            asp-controller="Season">
            <span class="fas fa-plus"></span>
            <span class="d-none d-sm-inline">
                New Season
            </span>
        </a>
    </div>
</div>
@foreach (var item in Model)
{
    <div class="row border-bottom mt-1 mb-1 pt-1 pb-1 ms-md-2">
        <div class="col-12 col-sm-6 col-md-6">
            @if(!item.IsDeletable)
			{
                <span data-bs-toggle="tooltip"
					title="Cannot be deleted: @item.PreventDeleteReason">
				<button class="btn btn-sm btn-outline-danger disabled"
				    disabled="disabled"
                    type="button">
			        <span class="fas fa-trash"></span>
			    </button>
                </span>
			} else {
                <a class="btn btn-sm btn-outline-danger"
                    asp-action="Delete"
                    asp-controller="Season"
                    asp-route-id="@item.Id"
                    title="Delete">
                    <span class="fas fa-trash"></span>
                </a>
            }&nbsp;
            <a class="btn btn-sm btn-outline-primary"
                asp-action="Edit"
                asp-controller="Season"
                asp-route-id="@item.Id"
                title="Edit">
                <span class="fas fa-pen"></span>
            </a> &nbsp;
            @Html.DisplayFor(modelItem => item.Name)
        </div>
        <div class="col-sm-8 col-md-6">
            @Html.DisplayFor(modelItem => item.Start) -
            @Html.DisplayFor(modelItem => item.End)
        </div>
    </div>
}
</div>