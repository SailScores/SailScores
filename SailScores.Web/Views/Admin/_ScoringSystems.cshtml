@model IEnumerable<SailScores.Web.Models.SailScores.ScoringSystemDeleteViewModel>
<div id="scoringdiv">
<div class="row">
    <div class="col-10 col-sm-8 col-md-5 col-lg-4">
        <h3 class="float-left">
            <a id="scoring">Scoring Systems</a><br />
            <span class="text-danger"><span class="small"><em>Advanced</em></span></span>
        </h3>
    </div>
    <div class="col-2 col-sm-4">
        <a class="btn btn-primary"
            asp-action="Create"
            asp-controller="ScoringSystem">
            <span class="fas fa-plus"></span>
            <span class="d-none d-sm-inline">
                New System
            </span>
        </a>
    </div>
    </div>
    @foreach (var item in Model)
    {
    <div class="row border-bottom mt-1 mb-1 pt-1 pb-1 ml-md-2">
    <div class="col-12">
        @if(!item.IsDeletable)
		{
			<button class="btn btn-sm btn-outline-danger disabled"
				disabled="disabled"
				title="Cannot be deleted: @item.PreventDeleteReason">
			    <span class="fas fa-trash"></span>
			</button>
		} else {
            <a class="btn btn-sm btn-outline-danger"
                asp-action="Delete"
                asp-controller="ScoringSystem"
                asp-route-id="@item.Id"
                title="Delete">
                <span class="fas fa-trash"></span>
            </a>
        }&nbsp;
        <a class="btn btn-sm btn-outline-primary"
            asp-action="Edit"
            asp-controller="ScoringSystem"
            asp-route-id="@item.Id"
            title="Edit">
            <span class="fas fa-pen"></span>
        </a> &nbsp;
        @Html.DisplayFor(modelItem => item.Name)
    </div>
</div>
}
</div>