@using SailScores.Web.Models.SailScores;
@model ClubItemViewModel<FleetSummary>

@{
    ViewBag.Title = Model.Item.Name;
    Layout = "_ClubLayout";
}

<h2>@Model.Item.Name</h2>

<ul>
    @foreach (var item in Model.Item.Series.OrderBy(s => s.Season.Name).ThenBy(s => s.Name))
    {
        <li>
            <a href="~/@Model.ClubInitials/@item.Season.UrlName/@item.Name">
                @item.Season.Name @Html.DisplayFor(modelItem => item.Name) (@(item.Races?.Count.ToString() ?? "No") Races)
            </a>
        </li>
    }
</ul>