@model SailScores.Web.Models.SailScores.ScoreCodeWithOptionsViewModel

@{
    ViewData["Title"] = "Delete Score Code";
    Layout = "~/Views/Shared/_ClubLayout.cshtml";
}

<h3>Are you sure you want to delete this score code?</h3>
<p>This will delete the score code in this scoring system only. If the code is defined
    in a base scoring system, that definition will be used. If the code is not defined,
    it will be treated as a DNC.
</p>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <form asp-action="Delete" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ScoringSystemId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@ViewData["ReturnUrl"]"
           class="btn btn-outline-primary">Cancel</a>
    </form>
</div>
