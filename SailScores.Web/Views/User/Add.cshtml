@model UserViewModel

@{
    ViewData["Title"] = "Add Scorekeeper";
    Layout = "~/Views/Shared/_ClubLayout.cshtml";
}
<div class="container-md">
    <h1>Add Scorekeeper</h1>
    <hr />
    <div class="row">
        <div class="col-12 col-lg-6">
            <p>
                Allow someone else to edit this club and its races. They will have the same features
                as any other administrator of the club.
            </p>
            <p>
                Adding a scorekeeper takes two steps (in any order):
            </p>
            <ul>
                <li>Add their email address here to give permission for this club.</li>
                <li>They must set up an account (and password) with the same email address.
                    They can browse to the login page and click the "Register as a new user?"
                    link or go to:<br />
                    <a href="https://www.sailscores.com/Account/Register">https://www.sailscores.com/Account/Register</a>
                </li>
            </ul>
            <p>After adding them below, the club admin page will indicate if they've registered.</p>
        </div>
        <div class="d-none d-lg-inline col-lg-6"></div>
        <br />
        <div class="col-lg-4 col-md-8">
            <form asp-action="Add"
                  asp-route-returnurl="@ViewData["ReturnUrl"]">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PermissionLevel" class="control-label"></label>
                    <select asp-for="PermissionLevel" class="form-control" asp-items="Html.GetEnumSelectList<SailScores.Database.Entities.PermissionLevel>()">
                    </select>
                    <span asp-validation-for="PermissionLevel" class="text-danger"></span>
                    <small class="form-text text-muted">
                        <strong>Club Administrator:</strong> Full access to all club features.<br/>
                        <strong>Series Scorekeeper:</strong> Can create/edit series and races, manage competitors.<br/>
                        <strong>Race Scorekeeper:</strong> Can create/edit races and manage competitors only.
                    </small>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Add" class="btn btn-primary" />
                    <a asp-controller="Admin"
                       asp-action="Index"
                       asp-fragment="scorekeepers"
                       class="btn btn-outline-primary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
