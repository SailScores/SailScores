<body>
<header class="bg-dark">
    @if (!wideLayout)
    {
        @Html.Raw("<div class=\"container-sm py-0\">");
    }
    <nav class="navbar navbar-expand-md navbar-dark bg-dark @(wideLayout? "py-0 px-3" : "p-0")">
        <a asp-area="" asp-controller="Club" asp-action="Index"
           asp-route-clubInitials="@clubInitials"
           class="navbar-brand@(isClubHome ? " active" : "")">@clubInitials</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a asp-area=""
                       asp-controller="Series"
                       asp-action="Index"
                       asp-route-clubInitials="@clubInitials"
                       class="nav-link@(isSeriesIndex ? " active" : "")">
                        @localizer["Series"]
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area=""
                       asp-controller="Race"
                       asp-action="Index"
                       asp-route-clubInitials="@clubInitials"
                       class="nav-link@(isRaceIndex ? " active" : "")">
                        @localizer["Races"]
                    </a>
                </li>
                @if (canEdit || hasRegattas)
                {
                    <li class="nav-item">
                        <a asp-area=""
                           asp-controller="Regatta"
                           asp-action="Index"
                           asp-route-clubInitials="@clubInitials"
                           class="nav-link@(isRegattaIndex ? " active" : "")">
                            @localizer["Regattas"]
                        </a>
                    </li>
                }
                @if (showCalendarInNav)
                {
                    <li class="nav-item">
                        <a asp-area=""
                           asp-controller="Calendar"
                           asp-action="Index"
                           asp-route-clubInitials="@clubInitials"
                           class="nav-link@(isCalendarIndex ? " active" : "")">
                            @localizer["Calendar"]
                        </a>
                    </li>
                }
                @if (showHelp)
                {
                    <li class="nav-item">
                        <a asp-page="/Help/Index"
                           target="_blank"
                           class="nav-link">
                            @localizer["Help"]
                        </a>
                    </li>
                }
            </ul>
            <ul class="navbar-nav navbar-right">
                <li class="nav-item"><a href="~/" class="nav-link navbar-brand faded-logo">SailScores</a></li>
            </ul>
        </div>
    </nav>
    @if (!wideLayout)
    {
        @Html.Raw("</div>");
    }
</header>

