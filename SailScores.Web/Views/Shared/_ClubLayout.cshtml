@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Routing
@using SailScores.Web.Resources
@using System.Globalization;

@inject IStringLocalizer<SharedResource> localizer
@inject SailScores.Web.Services.Interfaces.IAuthorizationService AuthService
@inject SailScores.Web.Services.Interfaces.IClubService ClubService
@inject SailScores.Web.Services.Interfaces.IRegattaService RegattaService
@inject AppSettingsService SettingsService

@{
    bool wideLayout = ((bool?)ViewData["WideLayout"]) ?? false;
    var clubInitials = Context.GetRouteData().Values["ClubInitials"]?.ToString()?.ToUpperInvariant();
    var controller = Context.GetRouteData().Values["controller"]?.ToString();
    var action = Context.GetRouteData().Values["action"]?.ToString();
    
    // Determine current page for highlighting
    bool isClubHome = controller?.Equals("Club", StringComparison.OrdinalIgnoreCase) == true && action?.Equals("Index", StringComparison.OrdinalIgnoreCase) == true;
    bool isSeriesIndex = controller?.Equals("Series", StringComparison.OrdinalIgnoreCase) == true && action?.Equals("Index", StringComparison.OrdinalIgnoreCase) == true;
    bool isRaceIndex = controller?.Equals("Race", StringComparison.OrdinalIgnoreCase) == true && action?.Equals("Index", StringComparison.OrdinalIgnoreCase) == true;
    bool isRegattaIndex = controller?.Equals("Regatta", StringComparison.OrdinalIgnoreCase) == true && action?.Equals("Index", StringComparison.OrdinalIgnoreCase) == true;
    bool isCalendarIndex = controller?.Equals("Calendar", StringComparison.OrdinalIgnoreCase) == true && action?.Equals("Index", StringComparison.OrdinalIgnoreCase) == true;
    
    // Get club information (cached)
    var club = await ClubService.GetMinimalClubAsync(clubInitials);
    bool canEdit = await AuthService.CanUserEdit(User, clubInitials);
    bool showCalendarInNav = club?.ShowCalendarInNav ?? false;
    bool showHelp = canEdit && SettingsService.ShowSupporterFeatures;
    
    // Check if club has regattas (only if user cannot edit, to avoid unnecessary query for scorekeepers)
    bool hasRegattas = false;
    if (!canEdit)
    {
        hasRegattas = await RegattaService.ClubHasRegattasAsync(clubInitials);
    }
}
