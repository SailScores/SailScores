@model SailScores.Core.Model.Announcement

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_ClubLayout.cshtml";
}

<h3>Are you sure you want to delete this notice?</h3>
<div class="row">
    <div class="col-md-6">
    <hr />
    <small>Posted by @Model.CreatedBy at @Model.CreatedLocalDate.ToString("f"):</small>
    @Html.Raw(Markdig.Markdown.ToHtml(Model.Content))
    
    <form asp-action="Delete" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        @if (String.IsNullOrWhiteSpace((String)ViewData["ReturnUrl"]))
        {
            <a asp-controller="Admin"
               asp-action="Index"
               class="btn btn-outline-primary">Cancel</a>
        } else
        {
            <a href="@ViewData["ReturnUrl"]"
               class="btn btn-outline-primary">Cancel</a>
        }
    </form>
</div>
</div>
