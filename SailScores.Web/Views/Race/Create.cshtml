@model SailScores.Web.Models.SailScores.RaceWithOptionsViewModel
@using SailScores.Web.Extensions

@{
    ViewBag.Title = "Edit Race";
    Layout = "_ClubLayout";
}

<div class="container p-0 justify-content-between">
    <h4>Add a new race</h4>
    <hr />
    <form id="raceform" asp-action="Create">
        <input type="hidden" id="clubId" asp-for="ClubId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Name<em>&ensp;Optional</em></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <input id="date" asp-for="Date" class="form-control"
                   onchange="window.SailScores.loadSeriesOptions()" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Order" class="control-label">Order<em>&ensp;Used for sorting after the date</em></label>
            <input asp-for="Order" class="form-control" />
            <span asp-validation-for="Order" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="State" class="control-label"></label>
            <select id="fleetType" asp-for="State" class="form-control"
                    asp-items="@(Html.GetEnumSelectList<SailScores.Api.Enumerations.RaceState>())"></select>
            <span asp-validation-for="State" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Description<em>&ensp;Optional</em></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TrackingUrl" class="control-label">Tracking Url<em>&ensp;Optional</em></label>
            <input asp-for="TrackingUrl" class="form-control" />
            <span asp-validation-for="TrackingUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FleetId" class="control-label">Fleet<em>&ensp;Controls the list of available competitors</em></label>
            <select id="fleetId" asp-for="FleetId" class="form-control" onchange="window.SailScores.loadFleet()">
                <option selected="selected">Select a fleet...</option>
                @foreach (var fleet in Model.FleetOptions)
                {
                    <option value="@fleet.Id">
                        @fleet.Name
                    </option>
                }
            </select>
            <span asp-validation-for="FleetId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SeriesIds" class="control-label">Series</label>
            <select id="seriesIds" asp-for="SeriesIds" class="form-control" multiple>
                @foreach (var series in Model.SeriesOptions)
                {
                    <option value="@series.Id">
                        @series.Name (@series.Season.Name)
                    </option>
                }
            </select>
            <span asp-validation-for="SeriesIds" class="text-danger"></span>
        </div>

        <div>
            Add result: <input id="newCompetitor" type="text" />
            <input type="button" value="Add Competitor" class="btn btn-primary" /><br />
        </div>
        <ul class="list-group col-12" id="results">
            <li class="list-group-item" id="competitorTemplate" style="display: none;">
                <div class="d-flex w-100">

                    <div class="d-none d-md-block">
                        <button class="btn btn-light" type="button" onclick="window.SailScores.moveUp()"><span class="fa fa-angle-up"></span></button>
                        <button class="btn btn-light" type="button" onclick="window.SailScores.moveDown()"><span class="fa fa-angle-down"></span></button>
                        &ensp;
                        <button class="btn btn-light delete-button" type="button" data-toggle="modal"
                                data-target="#deleteConfirm"
                                onclick="window.SailScores.confirmDelete()">
                            <span class="far fa-trash-alt text-danger"></span>
                        </button>
                    </div>
                    <div>
                        <span class="badge badge-secondary badge-pill race-place"></span>
                    </div>
                    <div>
                        <span class="sail-number"></span>
                    </div>
                    <div>
                        <span class="competitor-name h5"></span>
                    </div>
                </div>
                <div class="float-left pl-3 d-block d-md-none">
                    <button class="btn btn-light" type="button" onclick="window.SailScores.moveUp()"><span class="fa fa-angle-up"></span></button>
                    <button class="btn btn-light" type="button" onclick="window.SailScores.moveDown()"><span class="fa fa-angle-down"></span></button>
                    &ensp;
                    <button class="btn btn-light delete-button" type="button" data-toggle="modal"
                            data-target="#deleteConfirm"
                            onclick="window.SailScores.confirmDelete()">
                        <span class="far fa-trash-alt text-danger"></span>
                    </button>
                </div>
                &ensp;
                <div class="float-right">
                    <select class="select-code form-control form-control-sm" onchange="window.SailScores.calculatePlaces()">
                        <option value="No Code">No Code</option>
                        @foreach (var code in Model.ScoreCodeOptions)
                        {
                            <option value="@code.Name">@code.Name: @code.Description.Left(40)</option>
                        }
                    </select>
                </div>
            </li>
        </ul>
        <hr />
        <div class="row">
            <span id="submitDisabledMessage" visble>The Save function is still loading...</span>
            <div class="col-md-3">
                <input id="submitButton" type="submit" value="Create" class="btn btn-primary btn-block" disabled="disabled" />
            </div>
            <div class="col-md-3">
                <a asp-controller="Admin"
                   asp-action="Index"
                   asp-fragment="races"
                   class="btn btn-outline-primary btn-block">Cancel</a>
            </div>
        </div>
    </form>
    <hr />
</div>

<div class="modal fade" id="deleteConfirm" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmLabel">Delete result?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <p> Delete the result for <span id="competitorNameToDelete"></span>?</p>
                    </div>
                    <input id="compIdToDelete" type="hidden" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="window.SailScores.deleteResult()">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/vendor/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script src="~/js/raceEditor.build.js"></script>
    <script src="~/vendor/devbridge-autocomplete/jquery.autocomplete.js"></script>

    <script>
        var scoreCodes = @Html.Raw(Json.Serialize(Model.ScoreCodeOptions));
        window.SailScores.init()
    </script>

}
