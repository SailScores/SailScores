@model SailScores.Web.Models.SailScores.RaceWithOptionsViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ClubLayout.cshtml";
}

<h2>Create</h2>

<h4>Race</h4>

<script src="~/js/raceEditor.build.js"></script>
<script src="~/vendor/dragula/dragula.js"></script>
<link href="~/vendor/dragula/dragula.css" rel="stylesheet" />


<h2>Race Results</h2>
<div>
    Competitor: <input id="newCompetitor" />
    <input type="button" value="Add Competitor" onclick="window.SailScores.addCompetitor()" class="btn btn-default" /><br />
</div>
<div class="container">
    <ul class="list-group col-md-4 col-lg-3" id="results">
        <li class="list-group-item">
            <span class="badge badge-secondary badge-pill">1</span> <span>2144</span> <span>J. Fraser</span>
            <span class="fas fa-grip-lines float-right"></span>
        </li>
        <li class="list-group-item">
            <span class="badge badge-secondary badge-pill">2</span> <span>2144</span> <span>J. Fraser</span>
            <span class="fas fa-grip-lines float-right"></span>
        </li>
        <li class="list-group-item">
            <span class="badge badge-secondary badge-pill">3</span> <span>2144</span> <span>J. Fraser</span>
            <span class="fas fa-grip-lines float-right"></span>
        </li>
        <li class="list-group-item" id="competitorTemplate" style="display: none;">
            <span class="badge badge-secondary badge-pill race-place">4</span> <span class="boat-number">2144</span> <span class="competitor-name h5"></span>
            <span class="fas fa-arrows-alt-v float-right"></span>
        </li>
    </ul>
</div>


<script>dragula([document.getElementById('results')]);</script>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order" class="control-label"></label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FleetId" class="control-label">Fleet</label>
                <select asp-for="FleetId" class="form-control">
                    <option selected="selected">Select a fleet...</option>
                    @foreach (var fleet in Model.FleetOptions)
                    {
                        <option value="@fleet.Id">
                            @fleet.Name
                        </option>
                    }
                </select>
                <span asp-validation-for="FleetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeriesIds" class="control-label">Series</label>
                <select asp-for="SeriesIds" class="form-control" multiple>
                    @foreach (var series in Model.SeriesOptions)
                    {
                        <option value="@series.Id">
                            @series.Name
                        </option>
                    }
                </select>
                <span asp-validation-for="SeriesIds" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Admin"
       asp-action="Edit"
       asp-fragment="races">Back to List</a>
</div>




<hr />
<ul>
    @foreach (var comp in Model.CompetitorOptions)
    {
        <li>@comp.Name</li>
        <ul>

            @foreach (var fleet in comp.Fleets)
            {
                <li>@fleet.Name</li>
            }
        </ul>
    }
</ul>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
