@model SailScores.Web.Models.SailScores.RaceWithOptionsViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ClubLayout.cshtml";
}

<h4>Adding a new race</h4>


<hr />
<div class="row">
    <form asp-action="Create">
            <input type="hidden" id="clubId" asp-for="ClubId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name <em>(Optional)</em></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order" class="control-label"></label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FleetId" class="control-label">Fleet</label>
                <select id="fleetId" asp-for="FleetId" class="form-control" onchange="window.SailScores.loadFleet()">
                    <option selected="selected">Select a fleet...</option>
                    @foreach (var fleet in Model.FleetOptions)
                    {
                        <option value="@fleet.Id">
                            @fleet.Name
                        </option>
                    }
                </select>
                <span asp-validation-for="FleetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeriesIds" class="control-label">Series</label>
                <select asp-for="SeriesIds" class="form-control" multiple>
                    @foreach (var series in Model.SeriesOptions)
                    {
                        <option value="@series.Id">
                            @series.Name
                        </option>
                    }
                </select>
                <span asp-validation-for="SeriesIds" class="text-danger"></span>
            </div>

            <div>
                Add result: <input id="newCompetitor" type="text" />
                <input type="button" value="Add Competitor" class="btn btn-default" /><br />
            </div>
            <div class="container">
                <ul class="list-group col-md-8 col-lg-8" id="results">
                    <li class="list-group-item" data-competitorId="">
                        <span class="badge badge-secondary badge-pill">1</span> <span>2144</span> <span>J. Fraser</span>
                        <span class="fas fa-grip-lines float-right"></span>
                    </li>
                    <li class="list-group-item">
                        <span class="badge badge-secondary badge-pill">2</span> <span>2144</span> <span>J. Fraser</span>
                        <span class="fas fa-grip-lines float-right"></span>
                    </li>
                    <li class="list-group-item">
                        <span class="badge badge-secondary badge-pill">3</span> <span>2144</span> <span>J. Fraser</span>
                        <span class="fas fa-grip-lines float-right"></span>
                    </li>
                    <li class="list-group-item" id="competitorTemplate" style="display: none;">
                        <span class="badge badge-secondary badge-pill race-place">4</span> <span class="sail-number"></span> <span class="competitor-name h5"></span>
                        <span class="fas fa-arrows-alt-v float-right"></span>
                    </li>
                </ul>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

            <div>
                <a asp-controller="Admin"
                   asp-action="Edit"
                   asp-fragment="races">Back to List</a>
            </div>
    </form>
</div>
<hr />
<small>
    <ul>
        @foreach (var comp in Model.CompetitorOptions)
        {
            <li>
                @comp.Name
                <ul>
                    @foreach (var fleet in comp.Fleets)
                    {
                        <li>@fleet.Name</li>
                    }
                </ul>
            </li>
        }
    </ul>
</small>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/raceEditor.build.js"></script>
    <script src="~/vendor/dragula/dragula.js"></script>
    <script src="~/vendor/devbridge-autocomplete/jquery.autocomplete.js"></script>
    <link href="~/vendor/dragula/dragula.css" rel="stylesheet" />
    <script>dragula([document.getElementById('results')]);</script>

    <script>

    </script>

}
