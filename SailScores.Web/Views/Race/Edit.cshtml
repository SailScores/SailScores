@model SailScores.Web.Models.SailScores.RaceWithOptionsViewModel
@using SailScores.Web.Extensions;
@using System.Globalization;

@{
    ViewBag.Title = "Edit Race";
    Layout = "_ClubLayout";
}

<div class="container p-0 justify-content-between">
    <h4>Update a race</h4>
    <hr />
    <form id="raceform" asp-action="Edit" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <input type="hidden" id="clubId" asp-for="ClubId" />
        <input type="hidden" id="Id" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <input id="date" asp-for="Date" class="form-control"
                   onchange="window.SailScores.loadSeriesOptions()" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Order" class="control-label">Order<em>&ensp;Used for sorting after the date</em></label>
            <input asp-for="Order" class="form-control" type="number" />
            <span asp-validation-for="Order" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FleetId" class="control-label">Fleet<em>&ensp;Controls the list of available competitors</em></label>
            <select id="fleetId" asp-for="FleetId" class="form-control" onchange="window.SailScores.loadFleet()">
                <option selected="selected">Select a fleet...</option>
                @foreach (var fleet in Model.FleetOptions)
                {
                    <option value="@fleet.Id" data-boat-class-id="@(fleet.BoatClasses?.Count == 1 ? fleet.BoatClasses[0].Id.ToString():"")">
                        @fleet.Name
                    </option>
                }
            </select>
            <span asp-validation-for="FleetId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SeriesIds" class="control-label">Series</label>
            <select id="seriesIds" asp-for="SeriesIds" class="form-control" multiple>
                @foreach (var series in Model.SeriesOptions)
                {
                    <option value="@series.Id">
                        @series.Name (@series.Season.Name)
                    </option>
                }
            </select>
            <span asp-validation-for="SeriesIds" class="text-danger"></span>
        </div>

        <div id="advancedFields" role="tablist">
            <div class="card">
                <div class="card-header" role="tab" id="advancedHeading">
                    <h5 class="mb-0">
                        <a class="collapsed" data-toggle="collapse" href="#collapseAdvanced" aria-expanded="false" aria-controls="collapseAdvanced">
                            Additional Fields
                        </a> <span class="small"><em>&ensp;Optional</em></span>
                    </h5>
                </div>

                <div id="collapseAdvanced" class="collapse" role="tabpanel" aria-labelledby="advancedHeading" data-parent="#advancedFields">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="State" class="control-label"></label>
                            <select id="fleetType" asp-for="State" class="form-control"
                                    asp-items="@(Html.GetEnumSelectList<SailScores.Api.Enumerations.RaceState>())"></select>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Description</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TrackingUrl" class="control-label">Tracking Url</label>
                            <input asp-for="TrackingUrl" class="form-control" />
                            <span asp-validation-for="TrackingUrl" class="text-danger"></span>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-12 col-lg-8 pb-3">
                <ul class="list-group" id="results">
                    @await Html.PartialAsync("_scoreEntryPartial", Model)
                    @foreach (var score in Model.Scores)
                    {
                        <li id="@score.CompetitorId" class="list-group-item"
                            data-competitorid="@score.CompetitorId" data-originalScore="@score.Place">
                            <div class="d-flex w-100 flex-wrap">
                                <div>
                                    <span class="badge badge-secondary badge-pill race-place"></span>
                                </div>
                                <div>
                                    <span class="sail-number">@score.Competitor.SailNumber</span>
                                    @if (!String.IsNullOrWhiteSpace(score.Competitor.AlternativeSailNumber))
                                    {
                                        <span class="alt-sail-number"> (@score.Competitor.AlternativeSailNumber)</span>
                                    }
                                </div>
                                <div>
                                    <span class="competitor-name h5">@score.Competitor.Name</span>
                                </div>
                                <div class="float-right ml-auto d-flex">
                                    <div>
                                        <select class="select-code form-control form-control-sm" onchange="window.SailScores.calculatePlaces()">
                                            <option value="No Code">No Code</option>
                                            @foreach (var code in Model.ScoreCodeOptions)
                                            {
                                                <option value="@code.Name" selected="@(score.Code == code.Name)">@code.Name: @code.Description.Left(40)</option>
                                            }
                                        </select>
                                        <input class="code-points form-control form-control-sm"
                                               style="display:none"
                                               type="text" pattern="[0-9]+([\.,][0-9]+)?"
                                               placeholder="place"
                                               value="@score.CodePoints?.ToString("0.#")" />
                                    </div>
                                    <button class="btn btn-light" type="button" onclick="window.SailScores.moveUp()"><span class="fa fa-angle-up"></span></button>
                                    <button class="btn btn-light" type="button" onclick="window.SailScores.moveDown()"><span class="fa fa-angle-down"></span></button>
                                    &ensp;
                                    <button class="btn btn-light delete-button" type="button" data-toggle="modal"
                                            data-target="#deleteConfirm" data-competitorid="@score.CompetitorId"
                                            onclick="window.SailScores.confirmDelete()">
                                        <span class="far fa-trash-alt text-danger"></span>
                                    </button>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg-4 mb-3">
                <div class="form-group">
                    <label class="contorl-label h4">Add result:</label>
                    <input id="newCompetitor" type="text" class="form-control" />
                </div>
            </div>
            <div class="col-lg-2"></div>
            <div class="col-lg-3">
                <div class="form-group bottom-column">
                    <div class="form-group bottom-column">
                        <div class="">
                            <input id="createCompButton" type="button" value="Create New Competitor" class="btn btn-outline-primary btn-block" data-toggle="modal" data-target="#createCompetitor" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <span id="submitDisabledMessage" visble>The Save function is still loading...</span>
            <div class="col-md-3">
                <input id="submitButton" type="submit" value="Save" class="btn btn-primary btn-block" disabled="disabled" />
            </div>
            <div class="col-md-3">
                <a asp-controller="Admin"
                   asp-action="Index"
                   asp-fragment="races"
                   class="btn btn-outline-primary btn-block">Cancel</a>
            </div>
            <div class="col-md-3">

            </div>
            <div class="col-md-3">
                <a asp-controller="Race"
                   asp-action="Delete"
                   asp-route-id="@Model.Id"
                   class="btn btn-danger btn-block">Delete</a>
            </div>
        </div>
    </form>
</div>

<div class="modal fade" id="deleteConfirm" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmLabel">Delete result?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                <form>
                    <div class="form-group">
                        <div class="modal-body">
                            <p> Delete the result for <span id="competitorNameToDelete"></span>?</p>
                        </div>
                        <input id="compIdToDelete" type="hidden" />
</form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="window.SailScores.deleteResult()">Delete</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="createCompetitor" tabindex="-1" role="dialog" aria-labelledby="createCompetitorLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createCompetitorLabel">Create competitor?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="compCreateAlert" class="alert alert-danger alert-dismissible collapse" role="alert">
                <strong>Oops.</strong> Creating the competitor failed. Are the fields all filled in?
                <button type="button" class="close" onclick="window.SailScores.hideAlert()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="compform"
                  method="post" class="col-12" data-ajax="true" data-ajax-method="post"
                  data-ajax-url="@Url.Action("Create", "Competitor")"
                  data-ajax-loading="#compLoading"
                  data-ajax-failure="window.SailScores.completeCompCreateFailed"
                  data-ajax-success="window.SailScores.completeCompCreate">
                <div class="modal-body">

                    <input type="text" name="IsActive" value="true" hidden />
                    <input type="text" id="createCompFleetId" name="fleetIds[0]" hidden />
                    <div class="form-group">
                        <label class="control-label">Name <em>Required</em></label>
                        <input name="name" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label name="sailNumber" class="control-label">Sail Number <em>Required</em></label>
                        <input name="SailNumber" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label name="BoatClassId" class="control-label">Class <em>Required</em></label>
                        <select id="createCompBoatClassSelect" name="BoatClassId" class="form-control">
                            <option selected="selected">Select a class...</option>
                            @foreach (var boatclass in Model.CompetitorBoatClassOptions)
                            {
                                <option value="@boatclass.Id">
                                    @boatclass.Name
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <span class="spinner-border spinner-border-sm" id="compLoading" role="status" aria-hidden="true" style="display:none;">
                            <span class="sr-only">Loading...</span>
                        </span>
                        Add
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section PreFooter {
    <footer class="footer score-entry" id="scoreButtonFooter" style="display: none;">
        <div class="container footer-header">
            <div class="row float-right">
                <button type="button" class="close" aria-label="Close"
                        onclick="window.SailScores.hideScoreButtonFooter()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        <div class="container" id="scoreButtonDiv">
            <!-- competitor buttons go here-->
        </div>
    </footer>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/vendor/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script src="~/js/raceEditor.build.js"></script>
    <script src="~/vendor/devbridge-autocomplete/jquery.autocomplete.js"></script>

    <script>
        var scoreCodes = @Html.Raw(Json.Serialize(Model.ScoreCodeOptions));
        window.SailScores.init()
    </script>
}
