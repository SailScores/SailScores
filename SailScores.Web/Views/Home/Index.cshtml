@model SailScores.Web.Models.SailScores.ClubSelectorModel
@{
    ViewData["Title"] = "SailScores";
    ViewData["MetaDescription"] = "Fast mobile-friendly web-based sailing scores";
    ViewData["MetaKeywords"] = "sailing results scores web mobile-friendly";
}
<h1 class="display-4">SailScores</h1>
<p class="lead">Simple score collection and reporting for one-design sailing.</p>
<hr class="my-4">
<div class="row">
    <div class="col-md-6 order-md-first order-last">
        <h4>SailScores features</h4>
        <ul>
            <li>Fast, simple result sharing using the web.</li>
            <li>Easy-to-remember and shareable direct links to series and landing pages.</li>
            <li>Support for overlapping series: count the same race towards the weekend series as well as the season champ series.</li>
            <li>Historical results can be imported from SailWave.</li>
            <li>Club landing page can include links to home page or results on other systems.</li>
            <li>Smartphone, MacOS, and Windows friendly.</li>
            <li>Support for Appendix A Low Point Scoring, 
                <a href="https://www.ussailing.org/competition/rules-officiating/racing-rules/scoring-a-long-series/">
                High Point Percentage,</a> or customized club systems.
            </li>
        </ul>
    </div>
    <div class="col-md-6">
        @(await Html.PartialAsync("ClubSelectorView", Model))
        <hr class="my-4 d-md-none">
        <p class="d-md-none">SailScores is <a href="https://github.com/jbfraser1/SailScores">open source</a> and volunteer driven.</p>
        <p class="d-md-none">Host your club's scores on this site for free. <a href="mailto:info@sailscores.com">Contact us</a> and we'll help you get started.</p>
    </div>
</div>
