@model SailScores.Web.Models.SailScores.SiteHomePageModel
@{
    ViewData["Title"] = "SailScores - Scoring for One-Design Sailing";
    ViewData["MetaDescription"] = "Fast web-based mobile-friendly scores for sailing clubs";
    ViewData["MetaKeywords"] = "sailing race scoring results scores sail web mobile-friendly club series free";
}
<h1 class="display-4">SailScores</h1>
<p class="lead">Simple score collection and reporting for one-design sailing.</p>
<hr class="my-4">
<div class="row">
    <div class="col-md-4 d-none d-md-block order-md-0">
        <div id="carouselScreenshots" class="carousel slide carousel-fade" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/TypiqueSeries.webp" alt="Typical Series results" 
                    loading="lazy" class="img-fluid" width="973" height="1976">
                </div>
                <div class="carousel-item">
                    <img src="/images/TypiqueRaceEntry.webp" alt="Results entry" 
                    loading="lazy" class="img-fluid" width="973" height="1976">
                </div>
                <div class="carousel-item">
                    <img src="/images/TypiqueSeriesCS.webp" alt="Cox-Sprague Series results"
                    loading="lazy" class="img-fluid" width="973" height="1976">
                </div>
                <div class="carousel-item">
                    <img src="/images/TypiqueMainPage.webp" alt="Sample club main page"
                    loading="lazy" class="img-fluid" width="973" height="1976">
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 order-md-8">
        <br class="d-none d-md-inline" />
        @(await Html.PartialAsync("_ClubSelectorView", Model.ClubSelectorModel))
        <br />
        @if (Model.RegattaSelectorModel?.Regattas?.Any() ?? false)
        {
            @(await Html.PartialAsync("_RegattaSelectorView", Model.RegattaSelectorModel))
            <br />
        }
        <hr class="my-4">
        <div class="d-none d-md-inline">
            <br />
            <p>SailScores is <a href="https://github.com/SailScores/SailScores#sailscores">open source</a> and volunteer driven.</p>
            <p>
                <a asp-area="" asp-controller="ClubRequest" asp-action="Index">Host your club's scores</a> here for free.
            </p>
        </div>
    </div>
    <div class="col-md-4 order-md-5">
        <h4>What's important in sailing club scoring software?</h4>
        <ul>
            <li>Fast, simple result entry and sharing using the web. Optional speech
                recognition to make things really easy.</li>
            <li>Support for Appendix A Low Point Scoring including 2021-2024 codes,
                High Point Percentage, Cox-Sprague, and customized club scoring codes.
            </li>
            <li>Easy to bookmark and link to club, series, and regatta results.</li>
            <li>Competitor statistics across multiple series.</li>
            <li>Count a single race in multiple series.</li>
            <li>Automatically collect and share weather information.</li>
            <li>Laptop and phone friendly, for scorekeepers as well as racers.</li>
        </ul>
    </div>
</div>
