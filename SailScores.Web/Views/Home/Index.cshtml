@model SailScores.Web.Models.SailScores.ClubSelectorModel
@{
    ViewData["Title"] = "Home Page";
}
<h1 class="display-4">SailScores</h1>
<p class="lead">Simple score collection and reporting for one-design sailing.</p>
<hr class="my-4">
<div class="row">
    <div class="col-md-6 order-md-first order-last">
        <h4>Planned features</h4>
        <ul>
            <li>Quick result entry, especially on mobile devices.</li>
            <li>Integration with social media, such as automatic result posting to Twitter.</li>
            <li>Import and Export to integrate with existing scoring software.</li>
            <li>Support for overlapping series. (Races can be included in multiple series.)</li>
            <li>Result trend reporting: Are your races growing?</li>
        </ul>
    </div>
    <div class="col-md-6">
        @Html.Partial("ClubSelectorView", Model)
        <hr class="my-4 d-md-none">
    </div>
</div>
