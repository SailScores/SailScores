@using Microsoft.Extensions.Localization;
@using SailScores.Web.Resources;
@using SailScores.Web.Services;

@inject IStringLocalizer<SharedResource> localizer
@inject AppSettingsService settingsService

@model SailScores.Web.Models.SailScores.ClubStatsViewModel
@{
    ViewBag.Title = Model.Name + " Club Statistics";
    Layout = "_ClubLayout";
    ViewData["MetaDescription"] = $"Sailing results and scores for racing at {Model.Name} ({Model.Initials})";
}

<div class="container p-0 p-md-2">
    <div class="row mb-3">
        <div class="col-12 col-md-8">
            <h1>Club Statistics</h1>
            <p class="lead">General statistics about the club including competitors, races, and starts per season</p>
        </div>
        <div class="col-12 col-md-4 d-flex align-items-center justify-content-md-end">
            <a href="~/@Model.Initials/Reports" class="btn btn-outline-secondary">‚Üê Back to Reports</a>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            @if (Model.SeasonStats != null && Model.SeasonStats.Any())
            {
                <div class="mb-2 d-flex justify-content-end">
                    <a href="~/@Model.Initials/Reports/ClubStatsExport" class="btn btn-outline-primary">
                        <i class="bi bi-download"></i> Export as CSV
                    </a>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>Competitors</th>
                            <th>Races</th>
                            <th>Total Starts</th>
                            <th>Race Days</th>
                            <th>Ave Comp / race</th>
                            <th>Dates</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var seasonGroup in Model.SeasonStats.OrderBy(s => s.SeasonStart).GroupBy(s => s.SeasonName).OrderByDescending(g => g.Max(e => e.SeasonStart)))
                        {
                            var firstRow = true;

                            @foreach (var stat in seasonGroup)
                            {
                                @if (String.IsNullOrWhiteSpace(stat.ClassName) && seasonGroup.Count() == 2)
                                {
                                    continue;
                                }
                                <tr>
                                    @if (firstRow)
                                    {
                                        <th rowspan="@(seasonGroup.Count() == 2 ? 1 : seasonGroup.Count())" class="align-middle">
                                            <h3>@seasonGroup.Key</h3>
                                        </th>
                                    }
                                    <th>
                                        @if (String.IsNullOrWhiteSpace(stat.ClassName))
                                        {
                                            <h4>Total</h4>
                                        }
                                        else
                                        {
                                            firstRow = false;
                                            <h5>@stat.ClassName</h5>
                                        }
                                    </th>
                                    <td class="@(firstRow ? "h5" :"")">
                                        @stat.DistinctCompetitorsStarted
                                    </td>
                                    <td class="@(firstRow ? "h5" :"")">
                                        @stat.RaceCount
                                    </td>
                                    <td class="@(firstRow ? "h5" :"")">
                                        @stat.CompetitorsStarted
                                    </td>
                                    <td class="@(firstRow ? "h5" :"")">
                                        @stat.DistinctDaysRaced
                                    </td>
                                    <td class="@(firstRow ? "h5" :"")">
                                        @String.Format(
                        System.Globalization.CultureInfo.CurrentCulture,
                        "{0:0.0}", stat.AverageCompetitorsPerRace)
                                    </td>
                                    <td class="@(firstRow ? "h5" :"")">
                                        @stat.FirstRace?.ToString("M") &ndash;
                                        @stat.LastRace?.ToString("M")
                                    </td>
                                </tr>
                                { firstRow = false; }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
