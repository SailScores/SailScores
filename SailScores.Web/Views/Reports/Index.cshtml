@using SailScores.Web.Models.SailScores
@model ReportsIndexViewModel

@{
    ViewBag.Title = Model.ClubInitials + " Reports";
    ViewData["MetaDescription"] = $"{Model.ClubName} Reports";
    Layout = "_ClubLayout";
}

<div class="container p-0 p-md-2">
    <div class="row">
        <div class="col-12">
            <h1>Reports</h1>
            <p class="lead">Analysis and statistics for @Model.ClubName</p>
            @if (!Model.UseAdvancedFeatures)
            {
                <div class="alert alert-info">
                    <strong>Note:</strong> To keep the service fast and free, some reports show only recent data.
                    <a asp-controller="Supporter" asp-action="Index" asp-route-clubInitials="@null" target="_blank">Supporters</a>
                    get full historical access, which helps fund hosting and development.
                </div>
            } else
            {
              <div class="alert alert-info">
                    <strong>Thank you</strong> for supporting SailScores. <a href="mailto:info@SailScores.com">Let
                      us know</a> about additional reports you'd like to see here.
              </div>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <div class="h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="~/@Model.ClubInitials/Reports/WindAnalysis" class="text-decoration-none">Wind Analysis</a>
                    </h5>
                    <p class="card-text">
                        Wind speed and direction by race day in a polar chart.
                    </p>
                </div>
            </div>
        </div>


        <div class="col-md-4 mb-3">
            <div class="h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="~/@Model.ClubInitials/Reports/Participation" class="text-decoration-none">Participation Trends</a>
                    </h5>
                    <p class="card-text">
                        Number of distinct skippers participating,
                        broken down by boat class and time period.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="~/@Model.ClubInitials/Reports/ClubStats" class="text-decoration-none">Club Statistics</a>
                    </h5>
                    <p class="card-text">
                        General statistics about the club including competitors, races, and starts per season.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="~/@Model.ClubInitials/Reports/CompetitorStats" class="text-decoration-none">Competitor Summaries</a>
                    </h5>
                    <p class="card-text">
                        Summary stats for competitors including races participated,
                        boats beat, and participation by boat class and season.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="~/@Model.ClubInitials/Reports/AllCompPlaces" class="text-decoration-none">Competitor Places</a>
                    </h5>
                    <p class="card-text">
                        More detailed than Competitor Summary. Counts by competitor,
                        season, and day/race aggregation for score codes and finishing places.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
