@using SailScores.Web.Models.SailScores
@model ReportsIndexViewModel

@{
    ViewBag.Title = Model.ClubInitials + " Reports";
    ViewData["MetaDescription"] = $"{Model.ClubName} Reports";
    Layout = "_ClubLayout";
}

<div class="container p-0 p-md-2">
    <div class="row">
        <div class="col-12">
            <h1>Reports</h1>
            <p class="lead">Analysis and statistics for @Model.ClubName</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="~/@Model.ClubInitials/Reports/WindAnalysis" class="text-decoration-none">Wind Analysis</a>
                    </h5>
                    <p class="card-text">
                        View wind speed and direction data from race days.
                        Visualize patterns with an interactive scatter chart.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="~/@Model.ClubInitials/Reports/CompetitorStats" class="text-decoration-none">Competitor Statistics</a>
                    </h5>
                    <p class="card-text">
                        Comprehensive stats for each competitor including races participated,
                        boats beat, and participation percentages by fleet and season.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="~/@Model.ClubInitials/Reports/Participation" class="text-decoration-none">Participation Trends</a>
                    </h5>
                    <p class="card-text">
                        Track the number of distinct skippers participating over time,
                        broken down by fleet and time period.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
