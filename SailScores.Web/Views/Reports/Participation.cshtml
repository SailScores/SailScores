@using SailScores.Web.Models.SailScores
@model ParticipationViewModel

@{
    ViewBag.Title = Model.ClubInitials + " Participation Trends";
    ViewData["MetaDescription"] = $"{Model.ClubName} Participation Trends Report";
    Layout = "_ClubLayout";
}

<div class="container p-0 p-md-2">
    <div class="row">
        <div class="col-12">
            <h1>Participation Trends</h1>
            <p class="lead">Distinct skippers participating over time</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <a href="~/@Model.ClubInitials/Reports" class="btn btn-outline-secondary">‚Üê Back to Reports</a>
        </div>
    </div>

    <form method="get" class="row mb-4">
        <div class="col-md-3">
            <label for="groupBy" class="form-label">Group By</label>
            <select class="form-select" id="groupBy" name="groupBy">
                <option value="day" selected="@(Model.GroupBy == "day")">Day</option>
                <option value="week" selected="@(Model.GroupBy == "week")">Week</option>
                <option value="month" selected="@(Model.GroupBy == "month" || string.IsNullOrEmpty(Model.GroupBy))">Month</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="startDate" class="form-label">Start Date</label>
            <input type="date" class="form-control" id="startDate" name="startDate"
                   value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-3">
            <label for="endDate" class="form-label">End Date</label>
            <input type="date" class="form-control" id="endDate" name="endDate"
                   value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">Filter</button>
            <a href="~/@Model.ClubInitials/Reports/Participation" class="btn btn-outline-secondary">Clear</a>
        </div>
    </form>

    @if (Model.ParticipationData != null && Model.ParticipationData.Any())
    {
        var fleets = Model.ParticipationData.Select(p => p.FleetName).Distinct().OrderBy(f => f).ToList();
        
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Participation Over Time</h5>
                        <canvas id="participationChart" style="max-height: 400px;"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <h3>Data Table</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Period</th>
                                <th>Fleet</th>
                                <th class="text-end">Distinct Skippers</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ParticipationData)
                            {
                                <tr>
                                    <td>@item.Period</td>
                                    <td>@item.FleetName</td>
                                    <td class="text-end">@item.DistinctSkippers</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No participation data available for the selected date range.
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        @if (Model.ParticipationData != null && Model.ParticipationData.Any())
        {
            var fleets = Model.ParticipationData.Select(p => p.FleetName).Distinct().OrderBy(f => f).ToList();
            var periods = Model.ParticipationData.Select(p => p.Period).Distinct().OrderBy(p => p).ToList();
            
            <text>
            const ctx = document.getElementById('participationChart');
            
            const fleets = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(fleets));
            const periods = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(periods));
            
            const datasets = fleets.map((fleet, index) => {
                const colors = [
                    'rgba(255, 99, 132, 0.7)',
                    'rgba(54, 162, 235, 0.7)',
                    'rgba(255, 206, 86, 0.7)',
                    'rgba(75, 192, 192, 0.7)',
                    'rgba(153, 102, 255, 0.7)',
                    'rgba(255, 159, 64, 0.7)'
                ];
                
                const data = periods.map(period => {
                    const item = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ParticipationData))
                        .find(d => d.Period === period && d.FleetName === fleet);
                    return item ? item.DistinctSkippers : 0;
                });
                
                return {
                    label: fleet,
                    data: data,
                    backgroundColor: colors[index % colors.length],
                    borderColor: colors[index % colors.length].replace('0.7', '1'),
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                };
            });

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: periods,
                    datasets: datasets
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        x: {
                            stacked: true,
                            title: {
                                display: true,
                                text: 'Period'
                            }
                        },
                        y: {
                            stacked: true,
                            title: {
                                display: true,
                                text: 'Distinct Skippers'
                            },
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false
                        }
                    },
                    interaction: {
                        mode: 'nearest',
                        axis: 'x',
                        intersect: false
                    }
                }
            });
            </text>
        }
    </script>
}
