@using SailScores.Web.Models.SailScores
@model WindAnalysisViewModel

@{
    ViewBag.Title = Model.ClubInitials + " Wind Analysis";
    ViewData["MetaDescription"] = $"{Model.ClubName} Wind Analysis Report";
    Layout = "_ClubLayout";
}

<div class="container p-0 p-md-2">
    <div class="row">
        <div class="col-12">
            <h1>Wind Analysis</h1>
            <p class="lead">Wind speed and direction from race days</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <a href="~/@Model.ClubInitials/Reports" class="btn btn-outline-secondary">← Back to Reports</a>
        </div>
    </div>

    <form method="get" class="row mb-4">
        <div class="col-md-4">
            <label for="startDate" class="form-label">Start Date</label>
            <input type="date" class="form-control" id="startDate" name="startDate"
                   value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-4">
            <label for="endDate" class="form-label">End Date</label>
            <input type="date" class="form-control" id="endDate" name="endDate"
                   value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">Filter</button>
            <a href="~/@Model.ClubInitials/Reports/WindAnalysis" class="btn btn-outline-secondary">Clear</a>
        </div>
    </form>

    @if (Model.WindData != null && Model.WindData.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Wind Speed vs Direction</h5>
                        <canvas id="windChart" style="max-height: 500px;"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <h3>Data Summary</h3>
                <p>Total race days: @Model.WindData.Count</p>
                <p>Date range: @Model.WindData.Min(w => w.Date).ToString("d") to @Model.WindData.Max(w => w.Date).ToString("d")</p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No wind data available for the selected date range.
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        @if (Model.WindData != null && Model.WindData.Any())
        {
            <text>
            const ctx = document.getElementById('windChart');
            const windSpeedUnits = '@Model.WindSpeedUnits';
            
            const windData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.WindData.Select(w => new {
                r = w.WindSpeed,
                theta = w.WindDirection,
                date = w.Date.ToString("yyyy-MM-dd"),
                raceCount = w.RaceCount
            })));

            new Chart(ctx, {
                type: 'polarArea',
                data: {
                    datasets: [{
                        label: 'Wind Data',
                        data: windData,
                        backgroundColor: windData.map(() => `rgba(54, 162, 235, 0.5)`),
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        r: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: `Wind Speed (${windSpeedUnits})`
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const point = context.raw;
                                    const directions = ['N', 'NE', 'E', 'SE', 'S', 'SW', 'W', 'NW'];
                                    const directionIndex = Math.round(point.theta / 45) % 8;
                                    const directionName = directions[directionIndex];
                                    return [
                                        `Date: ${point.date}`,
                                        `Direction: ${directionName} (${Math.round(point.theta)}°)`,
                                        `Speed: ${point.r?.toFixed(1)} ${windSpeedUnits}`,
                                        `Races: ${point.raceCount}`
                                    ];
                                }
                            }
                        }
                    }
                }
            });
            </text>
        }
    </script>
}
