@using SailScores.Web.Models.SailScores
@model SkipperStatsViewModel

@{
    ViewBag.Title = Model.ClubInitials + " Competitor Statistics";
    ViewData["MetaDescription"] = $"{Model.ClubName} Competitor Statistics Report";
    Layout = "_ClubLayout";
}

<div class="container p-0 p-md-2">
    <div class="row mb-3">
        <div class="col-12 col-md-8">
            <h1>Competitor Statistics</h1>
            <p class="lead">Participation and performance metrics</p>
        </div>
        <div class="col-12 col-md-4 d-flex align-items-center justify-content-md-end">
            <a href="~/@Model.ClubInitials/Reports" class="btn btn-outline-secondary">‚Üê Back to Reports</a>
        </div>
    </div>

    <form method="get" class="row mb-4">
        <div class="col-md-4">
            <label for="startDate" class="form-label">Start Date</label>
            <input type="date" class="form-control" id="startDate" name="startDate"
                   value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-4">
            <label for="endDate" class="form-label">End Date</label>
            <input type="date" class="form-control" id="endDate" name="endDate"
                   value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">Filter</button>
            <a href="~/@Model.ClubInitials/Reports/CompetitorStats" class="btn btn-outline-secondary">Clear</a>
        </div>
    </form>

    @if (Model.SkipperStats != null && Model.SkipperStats.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="competitorTable">
                        <thead>
                            <tr>
                                <th>Competitor</th>
                                <th>Sail Number</th>
                                <th>Fleet</th>
                                <th>Season</th>
                                <th class="text-end">Races Participated</th>
                                <th class="text-end">Total Fleet Races</th>
                                <th class="text-end">Boats Beat</th>
                                <th class="text-end">Participation %</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stat in Model.SkipperStats)
                            {
                                <tr>
                                    <td>@stat.CompetitorName</td>
                                    <td>@stat.SailNumber</td>
                                    <td>@stat.FleetName</td>
                                    <td>@stat.SeasonName</td>
                                    <td class="text-end">@stat.RacesParticipated</td>
                                    <td class="text-end">@stat.TotalFleetRaces</td>
                                    <td class="text-end">@stat.BoatsBeat</td>
                                    <td class="text-end">@stat.ParticipationPercentage.ToString("F1")%</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <p class="text-muted small">
                    Total competitors: @Model.SkipperStats.Count
                </p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No competitor statistics available for the selected date range.
        </div>
    }
</div>

@section Scripts {
    <!-- DataTables CSS loaded here as layout doesn't support Styles section -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $('#competitorTable').DataTable({
                pageLength: 25,
                order: [[4, 'desc']], // Sort by Races Participated descending
                columnDefs: [
                    { targets: [4, 5, 6, 7], className: 'text-end' }
                ]
            });
        });
    </script>
}
