@model SailScores.Web.Models.SailScores.SupporterWithOptionsViewModel

@{
    ViewData["Title"] = "Add New Supporter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Add New Supporter</h2>
    <hr />
    
    <div class="row">
        <div class="col-lg-6 col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LogoFile" class="form-label"></label>
                    <input asp-for="LogoFile" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="LogoFile" class="text-danger"></span>
                    <small class="form-text text-muted">Upload a logo image (max 2 MB). Supported formats: PNG, JPG, GIF.</small>
                </div>

                <div class="mb-3">
                    <label asp-for="LogoUrl" class="form-label"></label>
                    <input asp-for="LogoUrl" class="form-control" />
                    <span asp-validation-for="LogoUrl" class="text-danger"></span>
                    <small class="form-text text-muted">Alternative: Full URL to an external logo image (e.g., https://example.com/logo.png)</small>
                </div>

                <div class="mb-3">
                    <label asp-for="WebsiteUrl" class="form-label"></label>
                    <input asp-for="WebsiteUrl" class="form-control" />
                    <span asp-validation-for="WebsiteUrl" class="text-danger"></span>
                    <small class="form-text text-muted">Full URL to the website (e.g., https://example.com)</small>
                </div>

                <div class="mb-3">
                    <label asp-for="Note" class="form-label"></label>
                    <textarea asp-for="Note" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Note" class="text-danger"></span>
                    <small class="form-text text-muted">A brief note about the supporter</small>
                </div>

                <div class="mb-3">
                    <label asp-for="ClubId" class="form-label">Link to Club</label>
                    <select asp-for="ClubId" class="form-select" id="clubSelector">
                        <option value="">-- No club link / Use separate logo --</option>
                        @foreach (var club in Model.ClubOptions)
                        {
                            <option value="@club.Id" data-initials="@club.Initials" data-logo="@club.LogoFileId">
                                @club.Name (@club.Initials)@(club.LogoFileId.HasValue ? " ✓" : "")
                            </option>
                        }
                    </select>
                    <span asp-validation-for="ClubId" class="text-danger"></span>
                    <small class="form-text text-muted">
                        Link this supporter to an existing club to use the club's burgee/logo. 
                        Clubs with a burgee are marked with ✓. 
                        The ClubInitials field will be automatically set when you select a club.
                    </small>
                </div>

                <div class="mb-3">
                    <label asp-for="ClubInitials" class="form-label"></label>
                    <input asp-for="ClubInitials" class="form-control" readonly />
                    <span asp-validation-for="ClubInitials" class="text-danger"></span>
                    <small class="form-text text-muted">Automatically set from club selection</small>
                </div>

                <div class="mb-3">
                    <label asp-for="ExpirationDate" class="form-label"></label>
                    <input asp-for="ExpirationDate" type="date" class="form-control" />
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                    <small class="form-text text-muted">Optional: When this supporter recognition expires</small>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsVisible" class="form-check-input" />
                    <label asp-for="IsVisible" class="form-check-label"></label>
                    <span asp-validation-for="IsVisible" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-outline-primary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/supporterClubSelector.js"></script>
}
