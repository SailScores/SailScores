@{
    ViewData["Title"] = "Payment Successful";
    ViewData["MetaDescription"] = "Thank you for supporting SailScores! Your payment has been processed successfully.";
    var clubInitials = ViewBag.ClubInitials as string;
    var userManagesMultipleClubs = ViewBag.MultipleClubs as bool? ?? false;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card border-success">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                    </div>                    
                    <h1 class="display-4 text-success mb-4">
                        Thank you for supporting SailScores!</h1>
                    
                    <p class="lead mb-4">
                        Payment Successful!
                    </p>

                    <div class="alert alert-info">
                        <p class="mb-2">
                            <i class="fas fa-info-circle"></i> Your subscription is now active.
                        </p>
                        <p class="mb-0">
                            You should receive a confirmation email from Stripe with your receipt and subscription details.
                        </p>
                    </div>

                    <hr class="my-4" />

                    <h3 class="mb-3">What's Next?</h3>
                    
                    <div class="row text-start">
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body">
                                    <h5><i class="fas fa-rocket text-primary"></i> Advanced Features Enabled</h5>
                                    <p class="small mb-0">
                                        Your club now has access to advanced result entry, additional reports, and extra file storage.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body">
                                    <h5><i class="fas fa-envelope text-primary"></i> Manage Subscription</h5>
                                    <p class="small mb-0">
                                        You can manage your subscription, update payment methods, or cancel anytime through the Stripe customer portal link in your email.
                                        @if (!string.IsNullOrWhiteSpace(ViewBag.StripeCustomerPortalUrl as string))
                                        {
                                            <br />
                                            <a href="@ViewBag.StripeCustomerPortalUrl" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-outline-primary mt-2">Manage Subscription</a>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        @if (!string.IsNullOrWhiteSpace(clubInitials) && !userManagesMultipleClubs)
                        {
                            <a asp-controller="Admin" asp-action="Index" asp-route-clubInitials="@clubInitials" class="btn btn-primary btn-lg me-2">
                                <i class="fas fa-cog"></i> Go to Club Admin
                            </a>
                            <a asp-controller="Club" asp-action="Index" asp-route-clubInitials="@clubInitials" class="btn btn-outline-primary btn-lg me-2">
                                <i class="fas fa-home"></i> Go to Club Home
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-2">
                                <i class="fas fa-home"></i> Go to Home
                            </a>
                        }
                        <a asp-controller="Supporter" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-heart"></i> View Supporters
                        </a>
                    </div>
                </div>
            </div>

            <!-- Support Contact Section -->
            <div class="card mt-4 border-0">
                <div class="card-body text-center">
                    <h5 class="mb-3">Need Help?</h5>
                    <p class="text-muted mb-0">
                        If you have any questions about your subscription or SailScores features, 
                        please don't hesitate to <a href="mailto:info@SailScores.com">contact us</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Clear any Stripe-related session storage
        if (window.sessionStorage) {
            sessionStorage.removeItem('stripeCheckoutInProgress');
        }
    </script>
}
