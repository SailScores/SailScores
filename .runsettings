<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <!-- Timeout settings for Test Explorer -->
  <RunConfiguration>
    <!-- 60 minutes timeout for integration tests with Docker and production data -->
    <!-- Production data backup/restore can take 30+ minutes depending on data size -->
    <!-- Individual tests may set their own timeout via [Timeout] attribute -->
    <TestSessionTimeout>3600000</TestSessionTimeout>

    <!-- Run tests serially, not in parallel -->
    <!-- (Docker containers can conflict if run in parallel) -->
    <MaxCpuCount>1</MaxCpuCount>

    <!-- Enable diagnostic output -->
    <LogLevel>Verbose</LogLevel>
  </RunConfiguration>
  
  <!-- Adapter-specific settings -->
  <xUnit>
    <!-- xUnit-specific timeout (in milliseconds) -->
    <AppDomain>denied</AppDomain>
  </xUnit>
  
  <!-- Test category filtering (optional) -->
  <TestCategoryFilters>
    <!-- Uncomment to skip slow tests by default in Test Explorer -->
    <!-- 
    <Exclude>
      <Category>Slow</Category>
    </Exclude>
    -->
  </TestCategoryFilters>
  
  <!-- Logging for debugging -->
  <LoggerRunSettings>
  </LoggerRunSettings>
</RunSettings>
